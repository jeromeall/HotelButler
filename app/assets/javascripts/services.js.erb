angular.module('stayServices', ['ngResource'])
  .factory('Stay', function($resource) {
    return $resource('/stays/:id', { id: '@id'});
  })
  .factory('Hotel', function($resource) {
    return $resource('/hotels/:id', { id: '@id'});
  })
  .factory('Concierge', function($resource){
    return $resource('/stays/:stay_id/concierges/:id', {stay_id: '@stay_id', id: '@id'});
  })
  .factory('Housekeeping', function($resource){
    return $resource('/stays/:stay_id/housekeepings/:id', {stay_id: '@stay_id', id: '@id'});
  })
  .factory('MenuItem', function($resource){
    return $resource('/hotels/:hotel_id/menu_items/:id', {stay_id: '@hotel_id', id: '@id'});
  })
  .factory('Roomservice', function($resource){
    return $resource('/stays/:stay_id/roomservices/:id', {stay_id: '@stay_id', id: '@id'});
  });