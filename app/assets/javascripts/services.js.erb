angular.module('stayServices', ['ngResource'])
  .factory('Stay',['$resource', function($resource) {
    return $resource('/stays/:id', { id: '@id'});
  }])
  .factory('Hotel',['$resource', function($resource) {
    return $resource('/hotels/:id', { id: '@id'});
  }])
  .factory('Concierge',['$resource', function($resource){
    return $resource('/stays/:stay_id/concierges/:id', {stay_id: '@stay_id', id: '@id'});
  }])
  .factory('Housekeeping',['$resource', function($resource){
    return $resource('/stays/:stay_id/housekeepings/:id', {stay_id: '@stay_id', id: '@id'});
  }])
  .factory('MenuItem', ['$resource', function($resource){
    return $resource('/stays/:stay_id/menu_items/:id', {stay_id: '@stay_id',  id: '@id'});
  }])
  .factory('Roomservice',['$resource', function($resource){
    return $resource('/stays/:stay_id/roomservices/:id', {stay_id: '@stay_id', id: '@id'});
  }])
  .factory('OrderDetail', ['$resource',function($resource){
    return $resource('/stays/:stay_id/roomservices/:roomservice_id/order_details/:id', {stay_id: '@stay_id', roomservice_id: '@roomservice_id', id: "@id"});
  }]);